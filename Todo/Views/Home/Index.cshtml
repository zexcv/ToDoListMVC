@model TodoViewModel

    <div class='row justify-content-center'>
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <table>
                <thead>
                    <tr class="table-primary">
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var  t in Model.TodoList)
                    {
                        <tr>
                            <td class="todos-column" scope="row">@t.Id</td>
                            <td class="todos-column">@t.Name</td>
                            <td class="buttons-column">
                                <input type="submit" value="Delete" class="btn btn-danger" onClick="deleteTodo(@t.Id)">
                                <input type="submit" value="Update" class="btn btn-primary" onClick="populateForm(@t.Id)">
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
        </div>
    </div>
